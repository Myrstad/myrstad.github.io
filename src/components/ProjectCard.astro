---
import { Image } from 'astro:assets';

interface Props {
  style: 'left' | 'right';
  image: ImageMetadata;
  title: string;
  alt: string;
  href?: string;
}

const { style, image, title, href="#", alt} = Astro.props
---

<div class:list={["project", style]}>
  <div class="content">
    <a href={href} data-cursor-big="">
      <h3>{title}</h3>
    </a>
    <slot></slot>
  </div>
  <div class="image">
    <!-- <img src={image.src} alt={image.alt} loading="lazy"> -->
    <Image src={image} alt={alt} width={1205} height={652} />
    <a href={href} class="button" data-cursor-big="">
      Se prosjekt
      <svg width="77" height="6" viewBox="0 0 77 6" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M77 3L72 0.113249V5.88675L77 3ZM0 3.5H72.5V2.5H0V3.5Z" fill="black"/ data-cursor-big="">
      </svg>
    </a>
  </div>
</div>

<style>
  .project.left {
    flex-direction: row-reverse;
  }

  .project {
    display: flex;
    align-items: flex-end;
    gap: 2rem;  
  }

  .image {
    flex: 1;
    flex-grow: 2;
    position: relative;
  }

  .image img {
    width: 100%;
    aspect-ratio: 16/9;
    border-radius: var(--br-lg);
  }
  
  .left .image a{
    left: unset;
    right: 0;
    border-radius: var(--br-lg) 0 var(--br-lg) 0;
  }
  
  .right .image a {
    border-radius: 0 var(--br-lg) 0 var(--br-lg);
  }

  .image a {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 6rem;
    font-size: 1.25rem;
    color: black;
    background-color: white;
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 0 4rem;
    gap: 1rem;
  }
  
  .content {
    flex: 1;
    font-size: 1.25rem;
    line-height: 150%;
    width: 100%;
  }
  .content a {
    color: black;
    text-decoration: none;
  }
  .content h3 {
    font-size: 2.5rem;
    font-weight: normal;
    margin: 0;
    margin-bottom: 1rem;
    text-transform: uppercase;
    width: fit-content;
    position: relative;
  }

  .content h3::after {
    content: '';
    position: absolute;
    background-color: black;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    transition: left 500ms;
  }

  .content h3:hover::after {
    left: 100%;
  }

  @media screen and (max-width: 1000px) {
    .project.left,
    .project.right {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .content {
      max-width: 50ch;
    }
    .left .image a,
    .right .image a{
      top: 0;
      left: 0;
      right: unset;
      bottom: unset;
      border-radius: var(--br-lg) 0 var(--br-lg) 0;
    }
  }
  @media screen and (max-width: 500px) {
    .content {
      font-size: 1rem;
    }
    .content h3 {
      font-size: 1.5rem;
    }
    .image img {
      border-radius: var(--br-md);
    }
    
    .left .image a,
    .right .image a {
      height: auto;
      padding-block: 1em;
      border-radius: var(--br-md) 0 var(--br-md) 0;
      font-size: 1rem;
    }
    
    .image a svg {
      display: none;
    }
  }
</style>