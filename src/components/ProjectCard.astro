---
import { imageConfig } from 'astro:assets';
interface Props {
  style: 'left' | 'right';
  image: {
    src: string;
    alt: string;
  }
  title: string;
  href?: string;
}

const { style, image, title="Udefinert prosjekt :(", href="#"} = Astro.props
---

<div class:list={["project", style]}>
  <div class="content">
    <a href={href} data-cursor-big="">
      <h3>{title}</h3>
    </a>
    <slot></slot>
  </div>
  <div class="image">
    <img src={image.src} alt={image.alt}>
    <a href={href} class="button" data-cursor-big="">
      Les mer
      <svg width="77" height="6" viewBox="0 0 77 6" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M77 3L72 0.113249V5.88675L77 3ZM0 3.5H72.5V2.5H0V3.5Z" fill="black"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .project.left {
    flex-direction: row-reverse;
  }

  .project {
    display: flex;
    align-items: flex-end;
    gap: 2rem;  
  }

  .image {
    flex: 1;
    flex-grow: 2;
    position: relative;
  }

  .image img {
    width: 100%;
    aspect-ratio: 16/9;
    border-radius: var(--br-lg);
  }
  
  .left .image a{
    left: unset;
    right: 0;
    border-radius: var(--br-lg) 0 var(--br-lg) 0;
  }
  
  .right .image a {
    border-radius: 0 var(--br-lg) 0 var(--br-lg);
  }

  .image a {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 6rem;
    font-size: 1.25rem;
    color: black;
    background-color: white;
    text-decoration: none;
    display: flex;
    align-items: center;
    padding: 0 4rem;
    gap: 1rem;
  }
  
  .content {
    flex: 1;
    font-size: 1.25rem;
    line-height: 150%;
  }
  .content a {
    color: black;
    text-decoration: none;
  }
  .content h3 {
    font-size: 2.5rem;
    font-weight: normal;
    margin: 0;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
</style>