<style>
  .navigation {
    z-index: 100;
    isolation: isolate;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;

    --color-background-blur: rgba(255, 255, 255, 0.65);
  }

  .content {
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--clr-dark);
  }

  .logo {
    position: relative;
    padding: 0.5rem 1.75rem;
    border-radius: 1.25rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    line-height: 100%;
    font-weight: 500;
    outline: 1px solid var(--clr-primary-100);
    color: black;
    text-decoration: none;
  }

  .logo::before {
    content: '';
    position: absolute;
    z-index: -1;
    inset: -4rem;
    /* background-color: red; */
    background-color: var(--color-background-blur);
    backdrop-filter: blur(0.5rem);
  }

  .logo img {
    height: 1.5rem;
    width: 1.5rem;
  }
  input {
    position: absolute;
    clip: rect(1px, 1px, 1px, 1px);
    padding: 0;
    border: 0;
    height: 1px;
    width: 1px;
    overflow: hidden; 
  }

  input:focus-visible ~ label {
    outline: 2px solid rgb(255, 165, 0);
    outline-offset: 2px;
  }

  label {
    position: relative;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 1.25rem;
    overflow: hidden;
    outline: 1px solid var(--clr-primary-100);
  }

  label::before {
    content: '';
    position: absolute;
    z-index: -1;
    inset: -4rem;
    /* background-color: red; */
    background-color: var(--color-background-blur);
    backdrop-filter: blur(0.5rem);
  }

  label span {
    position: absolute;
    top: calc(50% - 1px);
    left: calc(50% - 9px);
    display: block;
    height: 2px;
    border-radius: 2px;
    width: 1.125rem;
    background-color: black;
    transition: all 500ms;
    transform-origin: center;
  }

  label span:nth-child(1) {
    transform: translateY(-3px);
  
  }

  label span:nth-child(2) {
    transform: translateY(3px);
  }

  #navigation-toggle:checked ~ label span:nth-child(1){
      transform: translateY(0) rotate(45deg);
    }
  #navigation-toggle:checked ~ label span:nth-child(2){
    transform: translateY(0) rotate(-45deg);
  }

  .menu {
    position: fixed;
    z-index: -2;
    display: flex;
    align-items: center;
    top: 0;
    bottom: 0;
    transform-origin: top;
    padding-top: var(--side-padding);
    padding-bottom: var(--side-padding);
    transform: scale(1, 0);
    left: 0;
    right: 0;
    background-color: var(--clr-primary-50, #fff);
    transition: transform 500ms;
    overflow: scroll;
  }
  
  .menu ul {
    padding: 0 var(--side-padding);
    margin: 0 auto;
    padding-top: 4rem;
    display: flex;
    width: 100%;
		max-width: calc(var(--max-width) + 2 * var(--side-padding));
    flex-direction: column;
    transition: transform 500ms 500ms, opacity 250ms;
    transform: translateX(-4rem);
    opacity: 0;  
    list-style: none;
  }

  .menu a {
    display: block;
    color: black;
    transition: color 1000ms;
    line-height: 100%;
    text-decoration: none;
    padding: 1rem 0;
    font-size: 6rem;
    font-weight: 200;
    text-transform: uppercase;
    white-space: nowrap;
  }

  .menu a:hover {
    color: blue;
  }

  
  .menu a:hover::before,
  .menu a:focus-visible::before {
    content: '-->';
  }
  
  #navigation-toggle:checked ~ .menu {
    transition: transform 500ms;
    transform: scale(1, 1);
    /* padding-top: 5rem;
    padding-bottom: 1rem; */
  }

  #navigation-toggle:checked ~ .menu ul {
    transform: translateX(0);
    transition: transform 500ms 500ms, opacity 500ms 500ms;
    opacity: 1;
  }

  @media screen and (max-width:1000px) {
    .menu a {
      padding: 1rem 0rem;
      font-size: 4rem;
    }
  }
  @media screen and (max-width:700px) {
    .menu a {
      font-size: 3rem;
    }
  }
  @media screen and (max-width:500px) {
    .navigation {
      top: unset;
      bottom: 0;
    }
    
    .menu {
      transform-origin: bottom;
      align-items: flex-end;
    }

    .menu ul {
      padding-top: unset;
      padding-bottom: 3rem;
    }

    .menu a {
      font-size: 2.5rem;
      font-weight: 400;
    }
  }
</style>

<script>
  const navLinks = document.querySelectorAll(".menu a") as NodeListOf<HTMLAnchorElement>;
  const checkbox = document.querySelector("#navigation-toggle") as HTMLInputElement;
  const body = document.querySelector("body"); 

  checkbox.addEventListener('change', ()=>{
    if (checkbox.checked) {
      navLinks.forEach(link=>{
        link.tabIndex = 0
      })
      body?.classList.add("no-scroll")
    }
    else {
      navLinks.forEach(link=>{
        link.tabIndex = -1
      })
      body?.classList.remove("no-scroll")
    }
  })
  
  navLinks.forEach(link => {
    link.addEventListener('click', ()=>{
      body?.classList.remove("no-scroll")
      checkbox.checked = false;
      navLinks.forEach(link=>{
        link.tabIndex = -1
      })
    })
  });
</script>