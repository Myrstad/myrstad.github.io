<style>
  .navigation {
    z-index: 100;
    isolation: isolate;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    pointer-events: none;

    --color-background-blur: rgba(255, 255, 255, 0.65);
  }

  .content {
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--clr-dark);
  }

  .logo {
    pointer-events: auto;
    position: relative;
    padding: 0.5rem 1.75rem;
    border-radius: 1.25rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    line-height: 100%;
    font-weight: 500;
    outline: 1px solid var(--clr-primary-100);
    color: black;
    text-decoration: none;
  }

  .logo::before {
    content: '';
    position: absolute;
    z-index: -1;
    inset: -4rem;
    /* background-color: red; */
    background-color: var(--color-background-blur);
    backdrop-filter: blur(0.5rem);
  }

  .logo img {
    height: 1.5rem;
    width: 1.5rem;
  }
  input {
    position: absolute;
    clip: rect(1px, 1px, 1px, 1px);
    padding: 0;
    border: 0;
    height: 1px;
    width: 1px;
    overflow: hidden; 
  }

  input:focus-visible ~ label {
    outline: 2px solid rgb(255, 165, 0);
    outline-offset: 2px;
  }

  label {
    pointer-events: auto;
    position: relative;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 1.25rem;
    overflow: hidden;
    outline: 1px solid var(--clr-primary-100);
  }

  label::before {
    content: '';
    position: absolute;
    z-index: -1;
    inset: -4rem;
    /* background-color: red; */
    background-color: var(--color-background-blur);
    backdrop-filter: blur(0.5rem);
  }

  label span {
    position: absolute;
    top: calc(50% - 1px);
    left: calc(50% - 9px);
    display: block;
    height: 2px;
    border-radius: 2px;
    width: 1.125rem;
    background-color: black;
    transition: all 500ms;
    transform-origin: center;
  }

  label span:nth-child(1) {
    transform: translateY(-3px);
  
  }

  label span:nth-child(2) {
    transform: translateY(3px);
  }

  #navigation-toggle:checked ~ label span:nth-child(1){
      transform: translateY(0) rotate(45deg);
    }
  #navigation-toggle:checked ~ label span:nth-child(2){
    transform: translateY(0) rotate(-45deg);
  }

  .menu {
    pointer-events: none;
    position: fixed;
    z-index: -2;
    display: block;
    inset: 0;
    padding-inline: var(--side-padding);
    padding-top: 4rem;
    background-color: transparent;
    overflow-y: hidden;
    background-color: hsla(214, 44%, 93%, 0);
    backdrop-filter: blur(0rem);
    transition: background-color 1s ease, backdrop-filter 1s ease;
  }
  
  .menu ul {
    display: block;
    width: 100%;
    height: fit-content;
    padding: 0;
    margin: 0;
		max-width: calc(var(--max-width) + 2 * var(--side-padding));
    flex-direction: column;
    transition: transform 500ms 500ms, opacity 250ms;
    transform: translateX(-4rem);
    opacity: 0;  
    list-style: none;
    overflow-x: hidden;
  }

  .menu a {
    display: block;
    color: black;
    transition: color 1000ms;
    line-height: 100%;
    text-decoration: none;
    padding: 1rem 0;
    font-size: 6rem;
    font-weight: 200;
    text-transform: uppercase;
    white-space: nowrap;
    transform: translateX(-1.3125em);
    transition: transform 500ms ease-out;
  }

  .menu a::before {
    content: '-->';
  }

  .menu a:hover,
  .menu a:focus {
    color: blue;
    transform: translateX(0em);
  }
  .menu a:focus-visible {
    background-color: white;
    outline-color: transparent !important;
    border-radius: 1rem;
  }
  
  #navigation-toggle:checked ~ .menu {
    overflow-y: auto;
    pointer-events: auto;
    background-color: hsla(214, 44%, 93%, 0.8);
    backdrop-filter: blur(0.5rem);
  }

  #navigation-toggle:checked ~ .menu ul {
    transform: translateX(0);
    transition: transform 500ms 500ms, opacity 500ms 500ms;
    opacity: 1;
  }

  @media screen and (max-width:1000px) {
    .menu a {
      padding: 1rem 0rem;
      font-size: 4rem;
    }
  }
  @media screen and (max-width:700px) {
    .menu a {
      font-size: 3rem;
    }
  }
  @media screen and (max-width:500px) {
    .navigation {
      top: unset;
      bottom: 0;
    }

    .menu {
      padding-bottom: 4rem;
      padding-top: var(--side-padding);
    }

    .menu ul {
      position: absolute;
      width: unset;
      bottom: 4rem;
      max-height: calc(100vh - 4rem);
      min-width: fit-content;
    }

    .menu a {
      font-size: 2.5rem;
      font-weight: 400;
    }
  }
</style>

<script>
  const navLinks = document.querySelectorAll(".menu a") as NodeListOf<HTMLAnchorElement>;
  const checkbox = document.querySelector("#navigation-toggle") as HTMLInputElement;
  const body = document.querySelector("body"); 
  const menu = document.querySelector(".menu") as HTMLElement;

  checkbox.addEventListener('change', ()=>{
    if (checkbox.checked) {
      navLinks.forEach(link=>{
        link.tabIndex = 0
      })
      body?.classList.add("no-scroll")
    }
    else {
      navLinks.forEach(link=>{
        link.tabIndex = -1
      })
      body?.classList.remove("no-scroll")
    }
  })
  
  navLinks.forEach(link => {
    link.addEventListener('click', ()=>{
      body?.classList.remove("no-scroll")
      checkbox.checked = false;
      navLinks.forEach(link=>{
        link.tabIndex = -1
      })
    })
  });

  menu.addEventListener('focusout', (event) => {
    // Check if the focus has moved outside of the .menu element
    if (!menu.contains(event.relatedTarget as Node)) {
      body?.classList.remove("no-scroll");
      checkbox.checked = false;
      navLinks.forEach(link => {
        link.tabIndex = -1;
      });
    }
  });
</script>