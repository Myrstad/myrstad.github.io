---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	image: ImageMetadata;
	alt: string;
	nth?: string;
}

const { title, image, nth="first", alt } = Astro.props;
---

<div class:list={["card", nth]}>
	<!-- <img src={image.src} alt={image.alt} data-cursor-invert="" loading="lazy"> -->
	<Image src={image} alt={alt} />
	<div class="content">
		<h3>{title}</h3>
		<slot></slot>
	</div>
</div>

<style>
	.card {
		background-color: var(--clr-primary-100);
		border-radius: var(--br-md);
		padding: 1rem;
		height: fit-content;
	}
	.two{
		margin-top: 4rem;

	}
	.three{
		margin-top: 8rem;
	}
	.content {
		padding-block: 1rem;
	}

	img {
		border-radius: var(--br-sm);
		width: 100%;
	}

	h3 {
		font-size: 2.5rem;
		font-weight: normal;
		margin: 0;
		margin-bottom: 1rem;
	}

	 @media screen and (max-width: 1000px) {
		.card {
			height: unset;
		}
		.first {
			grid-column: span 2;
		}
		.two{
		margin-top: 0;

		}
		.three{
			margin-top: 0;
		}
	 }

	 @media screen and (max-width: 700px) {
		.first {
			grid-column: unset;
		}
		h3 {
			font-size: 2rem;
		}
	 }

	@media screen and (max-width: 500px) {
		h3 {
			font-size: 1.5rem;
		}
	}
</style>
