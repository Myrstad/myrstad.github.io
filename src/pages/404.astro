<style>
  .container {
    text-align: center;
  }

  h1 {
    font-size: 5rem;
    line-height: 1.2;
    margin: 0;
  }

  p {
    font-size: 2rem;
    line-height: 1.5;
    max-width: 40ch;
    margin: 2rem auto;
  }
  
  .buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .buttons a{
    width: fit-content;
    font-size: 1.25rem;
    line-height: 100%;
    padding: 1em 2em;
    text-decoration: none;
    color: inherit;
    border-radius: 100vmax;
  }

  .buttons :nth-child(1) {
    background-color: black;
    color: white;
  }
  .buttons :nth-child(2) {
    color: #000;
    outline: 2px solid black;
    outline-offset: -2px;
  }

  @media screen and (max-width: 800px) {
    p {
      font-size: 1.5rem;
    }
  }
</style>